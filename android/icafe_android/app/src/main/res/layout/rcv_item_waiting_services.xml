<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp8"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.TextView.Normal"
        tools:text="ORD-001"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCurrentCompleteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.TextView.Normal"
        android:textColor="@color/colorGreen"
        app:layout_constraintTop_toTopOf="@id/tvOrderID"
        app:layout_constraintStart_toEndOf="@id/tvOrderID"
        tools:text="(Phục vụ 1/3)"
        android:layout_marginStart="@dimen/dp4"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvComputerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.TextView.Normal"
        tools:text="Máy 01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvOrderID"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.TextView.SubTittle"
        app:layout_constraintTop_toBottomOf="@id/tvOrderID"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="02/12/2019 10:45"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTimeAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.TextView.SubTittle"
        tools:text="5 phút trước"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvComputerName"
        />

</androidx.constraintlayout.widget.ConstraintLayout>