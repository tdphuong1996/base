<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Button.Primary"
        parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">?attr/buttonNormalColor</item>
        <item name="colorControlHighlight">
            ?attr/buttonHighlightColor
        </item>
        <item name="android:textColor">?attr/buttonTextColor</item>
    </style>

    <style name="Widget.Toolbar" parent="ToolBarStyle">
        <item name="android:background">?attr/toolbarBackgroundColor</item>
    </style>

    <!--<editor-fold desc="Toolbar style">-->
    <style name="ToolBarStyle" parent="ToolBarStyle.Base"/>

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@style/TextAppearance.AppCompat.Widget.ActionBar.Title</item>
    </style>
    <!--</editor-fold>-->


    <!--<editor-fold desc="Text view style">-->
    <style name="Widget.TextView.Parent" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="Widget.Title.TextView" parent="Widget.TextView.Parent">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:layout_marginStart">@dimen/dp6</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Widget.TextView.Border.WapContent" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/lightColorPrimary</item>
        <item name="android:background">@drawable/corner_primary</item>
        <item name="android:paddingTop">@dimen/dp4</item>
        <item name="android:paddingBottom">@dimen/dp4</item>
        <item name="android:paddingStart">@dimen/dp12</item>
        <item name="android:paddingEnd">@dimen/dp12</item>
    </style>
    <!--</editor-fold>-->

    <!--<editor-fold desc="Home recharge status style">-->
    <style name="Widget.Title.TextView.Recharge" parent="Widget.TextView.Parent">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:layout_marginStart">@dimen/dp6</item>
    </style>

    <style name="Widget.TextView.Number.Large" parent="Widget.TextView.Parent">
        <item name="android:layout_marginTop">@dimen/dp2</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <style name="Widget.TextView.Recharge.Status" parent="Widget.TextView.Parent">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:layout_marginTop">@dimen/dp2</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <!--</editor-fold>-->

    <style name="Widget.TextView.Item.PC" parent="Widget.TextView.Parent">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:layout_marginStart">@dimen/dp6</item>
        <item name="android:textColor">#000</item>
    </style>


</resources>